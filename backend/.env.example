# ============================================================================
# PRIMARY LLM PROVIDER SELECTION
# ============================================================================
# Choose which LLM provider to use
# Options: gemini, openai, anthropic, cohere
LLM_PROVIDER=gemini

# ============================================================================
# GEMINI API CONFIGURATION
# ============================================================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=models/gemini-2.5-flash

# ============================================================================
# OPENAI API CONFIGURATION
# ============================================================================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo
OPENAI_ORG_ID=

# ============================================================================
# ANTHROPIC API CONFIGURATION
# ============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================================================
# COHERE API CONFIGURATION
# ============================================================================
COHERE_API_KEY=your-cohere-api-key-here
COHERE_MODEL=command-r-plus

# ============================================================================
# TRANSCRIPTION SERVICE CONFIGURATION (STT)
# ============================================================================
STT_PROVIDER=gemini
GOOGLE_SPEECH_CREDENTIALS_JSON=

# ============================================================================
# TEXT-TO-SPEECH CONFIGURATION
# ============================================================================
TTS_PROVIDER=gtts
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/farmdb

# ============================================================================
# UPLOADS
# ============================================================================
UPLOAD_DIR=/tmp/uploads

# ============================================================================
# AWS S3 (optional)
# ============================================================================
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
DEBUG=true
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=30
